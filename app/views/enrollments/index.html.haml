%h1 Listing enrollments

%table.table
  %thead
    %tr
      %th Course
      %th User
      %th Price
      %th
      %th
      %th

  %tbody
    - @enrollments.each do |enrollment|
      %tr
        %td= enrollment.course
        %td= enrollment.user
        %td= number_to_currency(enrollment.price)
        %td= link_to 'Show', enrollment
        %td= link_to 'Edit', edit_enrollment_path(enrollment)
        %td= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Enrollment', new_enrollment_path
